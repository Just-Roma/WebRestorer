{
	"manifest_version": 3,
	"name": "Web Restorer",
	"description": "Removes annoyances from web pages.",
	"version": "1.0",
	"permissions": ["tabs", "storage"],
	"icons": {
		"32": "icons/clean_32.png",
		"64": "icons/clean_64.png",
		"128": "icons/clean_128.png",
		"256": "icons/clean_256.png",
		"512": "icons/clean_512.png"
	},
	"host_permissions": ["http://*/", "https://*/"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["src/consts/sites.js", "src/main.js"],
			"run_at": "document_idle"
		}
	],
	"background": {
		"service_worker": "src/background.js",
		"type": "module"
	},
	"action": {
		"default_title": "Extension enabled.",
		"default_icon": {
			"32": "icons/enabled_32.png",
			"64": "icons/enabled_64.png",
			"128": "icons/enabled_128.png",
			"256": "icons/enabled_256.png",
			"512": "icons/enabled_512.png"
		}
	}
}
